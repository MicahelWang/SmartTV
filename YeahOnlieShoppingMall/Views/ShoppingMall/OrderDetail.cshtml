            });
            // $(".mCSB_scrollTools").addClass("hideBar");
        });
        function keyFunction() {
            if (event.keyCode == 37) {
                left();
            } else if (event.keyCode == 39) {
                right();
            } else if (event.keyCode == 48 || event.keyCode == 13) {
                location.href = "@Url.Action("Index", "ShoppingMall")";
            }
        }
        function onKeyDown(event) {
            if (event == code_left) {
                left();
            } else if (event == code_right) {
                right();
            } else if (event == code_back) {
                location.href = "@Url.Action("Index", "ShoppingMall")";
            }
            else if (event == code_enter) {
                location.href = "@Url.Action("Index", "ShoppingMall")";
            }
        }
        var ind = 0;
        //选择事件
        function left() {
            if (ind > 0) {
                ind--;
                $(".goodslist").mCustomScrollbar("scrollTo", $("td:first").width() * ind);
            }
        }
        function right() {
            if (ind < ($(".orderDeteil").length - 3) - 1) {
                ind++;
                $(".goodslist").mCustomScrollbar("scrollTo", $("td:first").width() * ind);
            }
        }

        function GetQueryString(name) {
            var reg = new RegExp("(^|&)" + name + "=([^&]*)(&|$)");
            var r = window.location.search.substr(1).match(reg);
            if (r != null)
                return unescape(r[2]);
            return "";
        }
