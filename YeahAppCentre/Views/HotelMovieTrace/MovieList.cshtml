@model System.Collections.Generic.List<HotelMovieTrace>
<tr>
    <td></td>
    <td colspan="5">
        <table class="table table-striped table-bordered table-hover dataTable" style="width:400px">
            <thead>
                <tr role="row">
                    <th>电影名称</th>
                    <th>电影名称(英文)</th>
                    <th>是否下载</th>
                    <th>编辑</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <input type="hidden" class="key" value="@item.MovieId" />
                            <input type="hidden" class="hotelId" value="@item.HotelId" />
                            @item.Movie.Name
                        </td>
                        <td>@item.Movie.NameEn</td>
                        <td>
                            @if (item.IsDownload)
                            {
                                @Html.Raw("是");
                            }
                            else
                            {
                                @Html.Raw("否");
                            }
                        </td>
                        <td>
                            <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                <a data-optype="editUpload" class="green" href="javascript:void(0)">
                                    <i class="icon-edit bigger-130"></i>
                                </a>
                            </div>
                            <div class="visible-xs visible-sm hidden-md hidden-lg">
                                <div class="inline position-relative">
                                    <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                        <i class="icon-caret-down icon-only bigger-120"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                        <li>
                                            <a data-optype="editUpload" href="javascript:void(0)" class="tooltip-success" data-rel="tooltip" title="" data-original-title="编辑">
                                                <span class="green">
                                                    <i class="icon-edit bigger-120"></i>
                                                </span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </td>
</tr>
