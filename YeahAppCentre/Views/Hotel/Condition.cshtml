@model YeahTVApi.DomainModel.SearchCriteria.CoreSysHotelCriteria

<div class="row">

    <div class="col-sm-12 tab-search">
        @using (Html.BeginForm("Index", "Hotel", FormMethod.Post, new { novalidate = "novalidate" }))
        {
            <label> 酒店名称</label>
            <span class="input-icon">
                @Html.EditorFor(model => model.HotelName, new { htmlAttributes = new { @class = "" } })
            </span>
            <label> 集团</label>
            <span class="input-icon">
                @Html.DropDownListFor(model => model.GroupId, ViewBag.Groups as IEnumerable<SelectListItem>)
   </span>
            <label> 品牌</label>
            <span class="input-icon">
                @Html.DropDownListFor(model => model.BrandId, ViewBag.DefaultSelect as IEnumerable<SelectListItem>)
     </span>
            <span class="input-icon">
                <button type="submit" class="btn btn-sm btn-success">查询</button>
            </span>
        }
        <div class="clear"></div>
    </div>
</div>

<script>
        $(document).ready(function () {
            var groupId = $("#GroupId").val();
            var hotelObj = $("#BrandId");
            var _brandId = "@Model.BrandId";
            BrandFromGroup(groupId, hotelObj, _brandId);
        });
</script>