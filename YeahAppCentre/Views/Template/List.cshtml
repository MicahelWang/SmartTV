@model IPagedList<TvTemplate>

<div class="row" id="list">
    <table id="viewTable" class="table table-striped table-bordered table-hover dataTable">

        <thead>
            <tr role="row">
                <th class="center">
                    <label>
                        <input type="checkbox" class="ace">
                        <span class="lbl"></span>
                    </label>
                </th>
                <th>模板名称</th>
                <th>备注</th>
                <th>结构名称</th>
                <th>创建人</th>
                <th>创建时间</th>
                <th>修改人</th>
                <th>修改时间</th>
                <th>复制</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="center">
                        <label>
                            <input type="checkbox" class="ace">
                            <span class="lbl"></span>
                        </label>
                        <input type="hidden" class="key" value="@item.Id" />
                    </td>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Description
                    </td>
                    <td>
                        @item.TemplateType.Name
                    </td>
                    <td>
                        @item.CreateUser
                    </td>
                    <td>
                        @item.CreateDate.ToDateTimeStr(DateFormate.yyyyMMddHHmmss)
                    </td>
                    <td>
                        @item.ModifyUser
                    </td>
                    <td>
                        @item.ModifyDate.ToDateTimeStr(DateFormate.yyyyMMddHHmmss)
                    </td>
                    <td>
                        <a data-optype="copy" class="blue" href="javascript:void(0)">
                            复制
                        </a>  
                    </td>
                    <td>
                        <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                            <a data-optype="view" class="blue" href="javascript:void(0)">
                                <i class="icon-zoom-in bigger-130"></i>
                            </a>
                            <a data-optype="edit" class="green" href="javascript:void(0)">
                                <i class="icon-pencil bigger-130"></i>
                            </a>
                            <a data-optype="delete" class="red" href="javascript:void(0)">
                                <i class="icon-trash bigger-130"></i>
                            </a>
                            <a data-optype="updatePower" class="badge-yellow" href="@Url.Action("Elements","Template",new{id=item.Id})">
                                <i class="icon-key bigger-130"></i>
                            </a>
                        </div>
                        <div class="visible-xs visible-sm hidden-md hidden-lg">
                            <div class="inline position-relative">
                                <button class="btn btn-minier btn-yellow dropdown-toggle" data-toggle="dropdown">
                                    <i class="icon-caret-down icon-only bigger-120"></i>
                                </button>
                                <ul class="dropdown-menu dropdown-only-icon dropdown-yellow pull-right dropdown-caret dropdown-close">
                                    <li>
                                        <a data-optype="view" href="javascript:void(0)" class="tooltip-info" data-rel="tooltip" title="" data-original-title="查看">
                                            <span class="blue">
                                                <i class="icon-zoom-in bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-optype="eidt" href="javascript:void(0)" class="tooltip-success" data-rel="tooltip" title="" data-original-title="编辑">
                                            <span class="green">
                                                <i class="icon-edit bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a data-optype="delete" href="javascript:void(0)" class="tooltip-error" data-rel="tooltip" title="" data-original-title="删除">
                                            <span class="red">
                                                <i class="icon-trash bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Elements","Template",new{id=item.Id})" class="tooltip-error" data-rel="tooltip" title="" data-original-title="删除">
                                            <span class="badge-yellow">
                                                <i class="icon-key bigger-120"></i>
                                            </span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
